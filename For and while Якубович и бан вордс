secret = "auto"
attempts = 5
gues = ["_"] * len(secret)

while attempts > 0 and "_" in gues:
    print(" ".join(gues))
    user = input("Sisesta täht: ")

    if user in secret:
        print("Õige!")
        for i in range(len(secret)):
            if secret[i] == user:
                gues[i] = user
    else:
        attempts -= 1
        print("Vale! Katseid jäänud:", attempts)

if "_" not in gues:
    print("Võit! Sõna oli:", secret)
else:
    print("Kaotus! Sõna oli:", secret)





















исправленый код угадай слово 
secret = "auto"
attempts = 5
gues = ["_"] * len(secret)

while attempts > 0 and "_" in gues:
    print(" ".join(gues))

    try:
        user = input("Sisesta täht: ")
        if len(user) != 1:
            raise ValueError("Palun sisesta ainult üks täht!")

        if user in secret:
            print("Õige!")
            for i in range(len(secret)):
                if secret[i] == user:
                    gues[i] = user
        else:
            attempts -= 1
            print("Vale! Katseid jäänud:", attempts)

    except ValueError as ve:
        print("Viga:", ve)
    except Exception as e:
        print("Midagi läks valesti:", e)

if "_" not in gues:
    print("Võit! Sõna oli:", secret)
else:
    print("Kaotus! Sõna oli:", secret)



















неудачная игра 
sõna =["auto","kass","kauplus","puu","jook","laptop"]
