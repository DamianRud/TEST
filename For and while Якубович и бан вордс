secret="auto"
print(secret)
gues = ""



user= input("Sisesta täht:")
num = 0

for i in range(0,len(secret)):
   gues += "_ "
   if secret[i] == user:
       print("see täht:",user,"on meis sõnas")
       num=i
gues=gues.split(' ')
gues[num] = user
print(gues)
