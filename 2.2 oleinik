import math

# =========================
# Задание 2.2 — Вопросы с множественным выбором
# =========================

# -------------------------
# Задача 1: Определение знака числа
# -------------------------
print("Задача 1: Знак числа")
num = float(input("Введите число => "))
if num > 0:
    print("Число положительное")
    if int(num) % 2 == 0:
        print("Число четное")
    else:
        print("Число нечетное")
elif num < 0:
    print("Число отрицательное")
else:
    print("Число равно нулю")

print("\n")

# -------------------------
# Задача 2: Углы треугольника
# -------------------------
print("Задача 2: Тип треугольника")
angle1 = float(input("Введите первый угол (градусы) => "))
angle2 = float(input("Введите второй угол (градусы) => "))
angle3 = float(input("Введите третий угол (градусы) => "))

if angle1 > 0 and angle2 > 0 and angle3 > 0:
    if angle1 + angle2 + angle3 == 180:
        print("Это треугольник")
        if angle1 == angle2 and angle2 == angle3:
            print("Равносторонний треугольник")
        elif angle1 == angle2 or angle1 == angle3 or angle2 == angle3:
            print("Равнобедренный треугольник")
        else:
            print("Разносторонний треугольник")
    else:
        print("Углы не образуют треугольник")
else:
    print("Ошибка: углы должны быть положительными")

print("\n")

# -------------------------
# Задача 3: День недели
# -------------------------
print("Задача 3: День недели по номеру")
want_day = input("Хотите узнать день недели по номеру? (да/нет) => ").lower()
if want_day == "да":
    day_num = int(input("Введите число от 1 до 7 => "))
    if 1 <= day_num <= 7:
        days = ["Понедельник", "Вторник", "Среда", "Четверг", "Пятница", "Суббота", "Воскресенье"]
        print("День недели: " + days[day_num - 1])
    else:
        print("Ошибка: число должно быть от 1 до 7")
else:
    print("Пропускаем день недели")

print("\n")

# -------------------------
# Задача 4: Гороскоп
# -------------------------
print("Задача 4: Гороскоп")
day = input("Введите день рождения (1-31) => ")
month = input("Введите месяц рождения (1-12) => ")
if day.isdigit() and month.isdigit():
    day = int(day)
    month = int(month)
    if 1 <= day <= 31 and 1 <= month <= 12:
        if (month == 3 and day >= 21) or (month == 4 and day <= 19):
            sign = "Овен"
        elif (month == 4 and day >= 20) or (month == 5 and day <= 20):
            sign = "Телец"
        elif (month == 5 and day >= 21) or (month == 6 and day <= 20):
            sign = "Близнецы"
        elif (month == 6 and day >= 21) or (month == 7 and day <= 22):
            sign = "Рак"
        elif (month == 7 and day >= 23) or (month == 8 and day <= 22):
            sign = "Лев"
        elif (month == 8 and day >= 23) or (month == 9 and day <= 22):
            sign = "Дева"
        elif (month == 9 and day >= 23) or (month == 10 and day <= 22):
            sign = "Весы"
        elif (month == 10 and day >= 23) or (month == 11 and day <= 21):
            sign = "Скорпион"
        elif (month == 11 and day >= 22) or (month == 12 and day <= 21):
            sign = "Стрелец"
        elif (month == 12 and day >= 22) or (month == 1 and day <= 19):
            sign = "Козерог"
        elif (month == 1 and day >= 20) or (month == 2 and day <= 18):
            sign = "Водолей"
        else:
            sign = "Рыбы"
        print("Ваш знак зодиака: " + sign)
    else:
        print("Ошибка: день или месяц вне диапазона")
else:
    print("Ошибка: введите числовые значения для дня и месяца")

print("\n")

# -------------------------
# Задача 5: Определение типа введенного значения
# -------------------------
print("Задача 5: Тип введенного значения")
value = input("Введите что угодно => ")
try:
    if "." in value:
        num = float(value)
        print("70% от введенного числа: " + str(num * 0.7))
    else:
        num = int(value)
        print("50% от введенного числа: " + str(num * 0.5))
except ValueError:
    if value.isalpha():
        print("Вы ввели текст: " + value)
    else:
        print("Введено нераспознанное значение")

print("\n")

# -------------------------
# Задача 6: Квадратное уравнение
# -------------------------
print("Задача 6: Квадратное уравнение")
solve_eq = input("Хотите решить квадратное уравнение? (да/нет) => ").lower()
if solve_eq == "да":
    a = float(input("Введите коэффициент a => "))
    b = float(input("Введите коэффициент b => "))
    c = float(input("Введите коэффициент c => "))
    if a == 0:
        print("Это не квадратное уравнение")
    else:
        D = b**2 - 4*a*c
        print("Дискриминант D = " + str(D))
        if D > 0:
            x1 = (-b + math.sqrt(D)) / (2*a)
            x2 = (-b - math.sqrt(D)) / (2*a)
            print("Два решения: x1 = " + str(x1) + ", x2 = " + str(x2))
        elif D == 0:
            x = -b / (2*a)
            print("Один корень: x = " + str(x))
        else:
            print("Нет действительных корней")
else:
    print("До свидания!")
