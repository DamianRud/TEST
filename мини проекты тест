калькулятор с деф с try except и сохранения в файл
def calculator():
    try:
        a = float(input("Введите первое число: "))
        b = float(input("Введите второе число: "))
    except ValueError:
        print("Ошибка: нужно вводить числа")
        return

    op = input("Введите операцию (+ - * /): ")

    if op == "+":
        result = a + b

    elif op == "-":
        result = a - b

    elif op == "*":
        result = a * b

    elif op == "/":
        if b == 0:
            print("Ошибка: деление на ноль")
            return
        else:
            result = a / b

    else:
        print("Неизвестная операция")
        return

    print("Результат:", result)

    file = open("history.txt", "a")
    file.write(str(a) + " " + op + " " + str(b) + " = " + str(result) + "\n")
    file.close()


calculator()











