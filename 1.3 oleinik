print("RATTAID SUMISEB TOK-TOK,")
print("TOK-TOK JA TOK-TOK.\n")

# =========================
# Задание 7 — Прямоугольник
# =========================
print("Ülesanne 7: Ristkülik")
while True:
    try:
        kylg_a = float(input("Sisesta esimese külje pikkus => "))
        kylg_b = float(input("Sisesta teise külje pikkus => "))
        break
    except ValueError:
        print("Viga: sisesta number")

perimeeter_rect = 2 * (kylg_a + kylg_b)
pindala_rect = kylg_a * kylg_b
print("Ristküliku perimeeter:", perimeeter_rect)
print("Ristküliku pindala:", pindala_rect)
print("\n")

# =========================
# Задание 8 — Расход топлива
# =========================
print("Ülesanne 8: Kütusekulu")
while True:
    try:
        kütus_liitrid = float(input("Sisesta kütuse kogus liitrites => "))
        vahemaa_km = float(input("Sisesta läbitud vahemaa km => "))
        break
    except ValueError:
        print("Viga: sisesta number")

kulu_100km = (kütus_liitrid / vahemaa_km) * 100
print("Keskmine kütusekulu 100 km kohta:", round(kulu_100km, 2))

print("\n")

# =========================
# Задание 9 — Роликовые коньки
# =========================
print("Ülesanne 9: Rulluisud")
kiirus_kmh = 29.9
vahemaa_min = kiirus_kmh / 60
print("Vahemaa, mis läbitakse minutiga:", round(vahemaa_min, 2), "km")

print("\n")

# =========================
# Задание 10 — Преобразование времени
# =========================
print("Ülesanne 10: Aja teisendamine")
while True:
    try:
        minutid_input = int(input("Sisesta minutite arv => "))
        break
    except ValueError:
        print("Viga: sisesta täisarv")

tunnid = minutid_input // 60
minutid_järel = minutid_input % 60
print("Aeg:", str(tunnid) + ":" + str(minutid_järel))
