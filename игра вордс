import random
from colorama import Fore, Style, init

# Инициализация colorama
init(autoreset=True)

# Список слов (все слова из 5 букв)
words = ["яблок", "груша", "слива", "банан", "лимон", "вишня", "морок", "тесто"]

# Компьютер выбирает случайное слово
password = random.choice(words)

attempts = 6
word_length = len(password)

print("Добро пожаловать в Wordle!")
print("Угадайте слово из", word_length, "букв.")
print("-" * word_length)

for attempt in range(1, attempts + 1):
    while True:
        guess = input("Попытка " + str(attempt) + ": ").lower()
        if len(guess) != word_length:
            print("Слово должно быть длиной", word_length, "букв.")
        else:
            break

    # Обратная связь
    feedback = ""
    for i in range(word_length):
        if guess[i] == password[i]:
            # Буква на своем месте
            feedback += Fore.GREEN + guess[i] + Style.RESET_ALL
        elif guess[i] in password:
            # Буква в слове, но не на месте
            feedback += Fore.YELLOW + guess[i] + Style.RESET_ALL
        else:
            # Буквы нет в слове
            feedback += guess[i]
    print(feedback)

    if guess == password:
        print(Fore.GREEN + "Поздравляем! Вы угадали слово!" + Style.RESET_ALL)
        break
else:
    print(Fore.RED + "Попытки закончились. Слово было:", password + Style.RESET_ALL)
