if len(personalidentitycode) == 11 and personalidentitycode.isdigit():
    first = int(personalidentitycode[0])

    # Определение пола
    if first % 2 == 0:
        gender = "Женщина"
    else:
        gender = "Мужчина"

    # Определение века
    if first in [1, 2]:
        year_prefix = 1800
    elif first in [3, 4]:
        year_prefix = 1900
    elif first in [5, 6]:
        year_prefix = 2000
    else:
        year_prefix = 0  # невалидный код

    year = year_prefix + int(personalidentitycode[1:3])
    month = int(personalidentitycode[3:5])
    day = int(personalidentitycode[5:7])

    if 1 <= month <= 12 and 1 <= day <= 31:
        print("Пол: " + gender)
        print("Дата рождения: " + str(day) + "." + str(month) + "." + str(year))
    else:
        print("Ошибка: некорректный день или месяц")
else:
    print("Ошибка: личный код должен содержать 11 цифр")
