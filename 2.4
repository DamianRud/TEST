print("\nЗадание 1: M-Dog")
try:
    a = int(input("Введите первое число: "))
    b = int(input("Введите второе число: "))
    op = input("Введите операцию (+, -, *, /, **, //, %): ")

    if op == "+":
        result = a + b
    elif op == "-":
        result = a - b
    elif op == "*":
        result = a * b
    elif op == "/":
        if b != 0:
            result = a // b
        else:
            result = 0
            print("Ошибка: деление на ноль")
    elif op == "**":
        result = a ** b
    elif op == "//":
        result = a // b
    elif op == "%":
        result = a % b
    else:
        result = 0
        print("Неизвестная операция")

    if result > 0:
        print("Результат: " + "ау-" * result)
    else:
        print("Результат: тишина...")

except ValueError:
    print("Ошибка: введите корректные числа")

