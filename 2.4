# Задание 2 — Температура
# -------------------------
print("\nЗадание 2: Температура")
choice = input("Выберите направление преобразования (C → F / F → C) [C/F]: ").upper()

try:
    temp = float(input("Введите температуру => "))

    if choice == "C":
        f = temp * 9 / 5 + 32
        print("Температура в °F: " + str(round(f, 2)))
    elif choice == "F":
        c = (temp - 32) * 5 / 9
        print("Температура в °C: " + str(round(c, 2)))
    else:
        print("Неверный выбор")

except ValueError:
    print("Ошибка: введите число")

# Дополнение: воспринимаемая температура
try:
    print("\nВвод для расчета воспринимаемой температуры:")
    T = float(input("Температура (°C) => "))
    Ws = float(input("Скорость ветра (м/с) => "))
    RH = float(input("Влажность (%) => "))

    perceived = T + (0.33 * (RH / 100 * 6.105 * math.exp(17.27 * T / (237.7 + T)))) - (0.70 * Ws) - 4
    print("Воспринимаемая температура: " + str(round(perceived, 1)) + " °C")

except ValueError:
    print("Ошибка ввода данных")

